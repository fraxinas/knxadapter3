{
  "sys":{
    "listenHost":"0.0.0.0",
    "verbosity":"debug"
  },
  "linknx": {
    "host":"linknx-host",
    "port":1028,
    "listenPort":8103
  },
  "weather_station":{
    "enabled":false,
    "listenHost":"0.0.0.0",
    "listenPort":8084,
    "objects":[
    {
        "sensor":"indoortempf",
        "knx_group":"sensors:inside:temperature",
        "conversion":"F_to_C",
        "hysteresis":0.2,
        "enabled":true
    },
    {
        "sensor":"tempf",
        "knx_group":"sensors:weather:temperature",
        "conversion":"F_to_C",
        "hysteresis":0.2,
        "enabled":true
    },
    {
        "sensor":"humidity",
        "knx_group":"sensors:weather:humidity",
        "conversion":false,
        "hysteresis":1.0,
        "enabled":true
    },
    {
        "sensor":"indoorhumidity",
        "knx_group":"sensors:inside:humidity",
        "conversion":false,
        "hysteresis":1.2,
        "enabled":true
    },
    {
        "sensor":"windspeedmph",
        "knx_group":"sensors:weather:windspeed",
        "conversion":"mph_to_kmh",
        "hysteresis":1.0,
        "enabled":true
    },
    {
        "sensor":"windgustmph",
        "knx_group":"sensors:weather:windgust",
        "conversion":"mph_to_kmh",
        "hysteresis":1.0,
        "enabled":true
    },
    {
        "sensor":"rainin",
        "knx_group":"sensors:weather:rain_hourly",
        "conversion":"inch_to_mm",
        "hysteresis":0.01,
        "enabled":true
    },
    {
        "sensor":"dailyrainin",
        "knx_group":"sensors:weather:rain_daily",
        "conversion":"inch_to_mm",
        "hysteresis":0,
        "enabled":true
    },
    {
        "sensor":"weeklyrainin",
        "knx_group":"sensors:weather:rain_weekly",
        "conversion":"inch_to_mm",
        "hysteresis":0,
        "enabled":true
    },
    {
        "sensor":"monthlyrainin",
        "knx_group":"sensors:weather:rain_monthly",
        "conversion":"inch_to_mm",
        "hysteresis":0,
        "enabled":true
    },
    {
        "sensor":"yearlyrainin",
        "knx_group":"sensors:weather:rain_yearly",
        "conversion":"inch_to_mm",
        "hysteresis":0,
        "enabled":true
    },
    {
        "sensor":"baromin",
        "knx_group":"sensors:weather:pressure",
        "conversion":"inHg_to_hPa",
        "hysteresis":0,
        "enabled":true
    },
    {
        "sensor":"solarradiation",
        "knx_group":"sensors:weather:solarradiation",
        "conversion":false,
        "hysteresis":0.01,
        "enabled":true
    }
    ]
  },
  "avr": {
    "enabled":false,
    "host":"pioneer-host",
    "port":8102,
    "objects":[
        {
            "avr_object":"power",
            "knx_group":"other:homecinema:avr_power",
            "enabled":true
        },
        {
            "avr_object":"fn",
            "knx_group":"other:homecinema:avr_input",
            "enabled":true
        },
        {
            "avr_object":"volume",
            "knx_group":"other:homecinema:avr_volume",
            "enabled":true
        },
        {
            "avr_object":"display_text",
            "knx_group":"other:homecinema:avr_title",
            "enabled":true
        }
    ]
  },
  "ups": {
    "enabled":false,
    "host":"apcupsd-host",
    "port":3551,
    "objects":[
        {
            "ups_expr":"STATUS *: (\\w*)",
            "knx_group":"sensors:ups:status",
            "enabled":true
        },
        {
            "ups_expr":"LINEV *: ([0-9.]*) Volts",
            "knx_group":"sensors:ups:line_voltage",
            "hysteresis":0.2,
            "enabled":true
        },
        {
            "ups_expr":"BCHARGE  : ([0-9.]*) Percent",
            "knx_group":"sensors:ups:battery_charge",
            "hysteresis":0.2,
            "enabled":true
        },
        {
            "ups_expr":"BATTV *: ([0-9.]*) Volts",
            "knx_group":"sensors:ups:battery_voltage",
            "hysteresis":0.2,
            "enabled":true
        },
        {
            "ups_expr":"LINEFREQ : ([0-9.]*) Hz",
            "knx_group":"sensors:ups:line_frequency",
            "hysteresis":0.2,
            "enabled":true
        }
    ]
  }
}
